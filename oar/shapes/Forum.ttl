@prefix : <#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix schema: <http://schema.org/> .
@prefix doap: <http://usefulinc.com/ns/doap#> .
@prefix sioc: <http://rdfs.org/sioc/ns#> .
@prefix oar: <https://github.com/solid/organizations/tree/main/vocabularies/oar.ttl#> .

:ForumShape
    a sh:NodeShape ;
    sh:targetClass sioc:Forum ;
    sh:property [
        sh:path schema:additionalType ;
        sh:minCount 1 ;
    ] ;
    sh:property [
        sh:path schema:name ;
        sh:minCount 1 ;
    ] ;
    sh:property [
        sh:path schema:provider ;
        sh:minCount 1 ;
    ] ;
    sh:property [
        sh:path doap:service-endpoint ;
        sh:datatype sh:IRI;
        sh:minCount 1 ;
    ] ;
    sh:property [
        sh:path sioc:has_administrator ;
        sh:minCount 1 ;
    ] ;
    sh:property [
        sh:path sioc:has_moderator ;
        sh:minCount 1 ;
    ] ;
    sh:property [
        sh:path schema:isAvailableForFree ;
        sh:minCount 1 ;
    ] ;
    sh:property [
        sh:path schema:termsOfService ;
        sh:minCount 1 ;
    ] ;
    sh:property [
        sh:path oar:implementedUsing ;
        sh:minCount 1 ;
    ] .
