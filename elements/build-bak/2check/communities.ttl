
<h2>Collaboration Opportunities</h2>
<p>
Discover ways to join and contribute to the Solid community.
</p>

<sol-sparql
  endpoint="./all.ttl"
  template="#ForumsView"
  query="#ForumsQuery"
></sol-sparql>

<script id="ForumsQuery">
    PREFIX schema: <http://schema.org/>
    PREFIX sioc: <http://rdfs.org/sioc/ns#> 
    PREFIX sioct: <http://rdfs.org/sioc/types#> 
    PREFIX oar: <http://localhost:8444/home/s/solidify/build/oar.ttl#> 
    SELECT ?name ?type ?endpoint ?admin ?mod ?provider ?description ?platform
    WHERE {
      ?x a sioc:Forum.
      ?x a ?type.
      ?x schema:name ?name.
      ?x siocs:service_endpoint ?endpoint.
      ?x schema:provider ?providerUrl. 
      ?providerUrl schema:name ?providerName.
      OPTIONAL {
        ?x oar:implementedUsing ?platform. 
      }
      OPTIONAL {
        ?x schema:description ?description. 
      }
      OPTIONAL {
        ?x siocs:has_adminsitrator admin.
      }
      OPTIONAL {
        ?x schema:has_moderator ?mod.
      }
    }
</script>

<template id="myView">

  <div class="card">
    <div class="header">
      <div class="name">${name}</div>
      <div class="type">a ${type}</div>
    </div>
    ${description ?"<p>"+description+"</p>" : "";
    <div>endpoint: <a href="${endpoint}">${endpoint}</a></div>
    <div>provider: <a href="${providerUrl}">${providerName}</a> 
    <div>admin: ${admin||"?"}</div>
    <div>moderator: ${mod||"?"}</div>
    <div class="footer">
      <span class="left">is free: yes</span>
    </div>
  </div>

</template>

<script src="/home/s/solid-web-components/sol-local.js" type="module"></script>

